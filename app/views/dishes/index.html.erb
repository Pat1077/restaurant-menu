<%= link_to "New dish", new_dish_path  %>

<% @dishes.each do |dish| %>
  <h2><%= link_to dish.name, dish_path(dish) %></h2>
  <p><%= dish.kind_dish %> - <%= number_with_precision(dish.price, precision: 2, separator: ",") %></p>
  <%= link_to "Edit", edit_dish_path(dish) %>
  <%= link_to "Delete", dish_path(dish),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>
